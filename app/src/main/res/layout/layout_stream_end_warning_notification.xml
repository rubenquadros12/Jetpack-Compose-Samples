<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="54dp"
        android:background="@color/black"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_notifications"
            android:contentDescription="Profile Image"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginHorizontal="16dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ruben Ruben Ruben Ruben Ruben Ruben Ruben"
            android:textColor="@color/mv_white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:text="@string/notification_desc"
            android:textColor="@color/mv_white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_description"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:text="8h"
            android:textColor="@color/grey_8a8a8f"
            android:textSize="13sp" />

<!--        <ImageView
            android:id="@+id/iv_host_profile"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Profile Image"
            android:scaleType="fitXY"
            android:src="@drawable/profile" />-->

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_host_profile"
        android:layout_width="54dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Profile Image"
        android:scaleType="fitXY"
        android:src="@drawable/profile" />

</RelativeLayout>